/* pages/audit/visitorDetail/visitorDetail.wxss */
page{
  color: #f7f7f7;
}
.wrap{
  display: flex;
  justify-content: center;
}
.borderClass{
  margin-top: 30rpx;
  width: 92%;
  border-radius: 15rpx;
  box-shadow:  1px 1px 5px #dddddd;
  display: flex;
  align-items: center;
  justify-content: center;
}
.content{
  width: 92%;
  display: flex;
  flex-direction: column;
}
.title{
  font-size: 35rpx;
  color: #4d8fc5 !important;
  border-bottom: 1px solid #b4b3b3 !important;
  padding: 15rpx;
}
.content > view{
  border-bottom: 1px solid #f0eded;
  padding: 20rpx;
  color: gray;
}
text{
  width: 180rpx;
  display: inline-block;
}
.btnWrap{
  margin: 20rpx 0 0 0;
  width: 97%;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100rpx;
}
.btn{
  width: 62%;
  display: flex;
  align-items: center;
  height: 100rpx;
  justify-content: space-between;
}
.refuse{
  font-size: 30rpx;
  width: 35%;
  text-align: center;
  background: #d53f3f;
  color: #fff;
  height: 70%;
  line-height: 70rpx;
  border-radius: 8rpx;
}
.pass{
  font-size: 30rpx;
  width: 35%;
  margin-left: 20rpx;
  text-align: center;
  background: #4d8fc5;
  color: #fff;
  height: 70%;
  line-height: 70rpx;
  border-radius: 8rpx;
}
